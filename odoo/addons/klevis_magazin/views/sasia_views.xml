<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="klevismagazin_sasia_form_view" model="ir.ui.view">
            <field name="name">klevismagazin.sasia.form</field>
            <field name="model">klevismagazin.sasia</field>
            <field name="arch" type="xml">
                <form string="Gjendja ne magazina">
                    <sheet>
                        <div class="oe_title">
                            <label for="example_title"/>
                            <h1>
                                <field name="produkt_id" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="magazine_id"/>
                            </group>
                            <group>
                                <field name="sasia"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="klevismagazin_sasia_tree_view" model="ir.ui.view">
            <field name="name">klevismagazin.sasia.tree</field>
            <field name="model">klevismagazin.sasia</field>
            <field name="arch" type="xml">
                <tree string="Gjendja ne magazina">
                    <field name="produkt_id"/>
                    <field name="magazine_id"/>
                    <field name="sasia"/>
                </tree>
            </field>
        </record>

        <record id="klevismagazin_sasia_act_window" model="ir.actions.act_window">
            <field name="name">Gjendja ne magazina</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">klevismagazin.sasia</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Gjendja ne magazina" id="klevismagazin_sasia_menu" parent="klevis.shop_menu" action="klevismagazin_sasia_act_window"/>

    </data>
</odoo>